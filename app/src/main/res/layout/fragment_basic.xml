<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiaoyezi.midicoretest.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/btns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="连接"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_connect"
                android:background="@android:drawable/btn_default"
                android:elevation="0dp"
                android:visibility="visible"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="查静态信息"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_query_si"
                android:background="@android:drawable/btn_default" />

            <CheckBox
                android:text="物理设备未连接"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cb_connection"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:checked="false"
                android:textColor="@android:color/holo_blue_dark"
                android:textAllCaps="false" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:id="@+id/rg_light_color"
                android:checkedButton="@+id/rb_light_red">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/rb_light_red"
                    android:text="红"
                    android:textColor="@android:color/holo_red_dark"
                    android:focusable="false"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/rb_light_blue"
                    android:text="蓝"
                    android:checked="false"
                    android:textColor="?android:attr/colorActivatedHighlight"
                    android:focusable="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/rb_light_purple"
                    android:text="紫"
                    android:checked="false"
                    android:textColor="@android:color/holo_purple"
                    android:focusable="false" />

            </RadioGroup>
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/et_pitch"
                android:textColor="@android:color/holo_orange_dark"
                android:text="60"
                android:selectAllOnFocus="false"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:layout_height="wrap_content">

            <Button
                android:text="全键亮"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_all_light_on"
                android:background="@android:drawable/btn_default"
                android:visibility="visible"
                android:textColor="@android:color/background_dark"
                android:layout_weight="1"/>

            <Button
                android:text="单键亮"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_light_on"
                android:background="@android:drawable/btn_default"
                android:layout_weight="1"/>

            <Button
                android:text="全键灭"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_all_light_off"
                android:background="@android:drawable/btn_default"
                android:layout_weight="1"/>

            <Button
                android:text="单键灭"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_light_off"
                android:background="@android:drawable/btn_default"
                android:layout_weight="1"/>

            <Button
                android:text="按按键"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_press_key"
                android:background="@android:drawable/btn_default"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_weight="1"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="#333333"
            android:id="@+id/et_super_cmd"
            android:textColor="@android:color/holo_blue_bright"
            android:textStyle="normal|italic"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:text=" > 这是还不能用的超级命令行" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btns_layout"
        android:text="这里显示midi消息"
        android:layout_weight="0.45"
        android:background="#eeeeee"
        android:id="@+id/tv_midi_data"
        android:textSize="18sp" />

</LinearLayout>
